{{#partial "content"}}
        <section>
            <div class="container">
                <div class="entry-list">
                    {{#each tagEntry}}
                    <article>
                        <h2><a href="/{{slug}}">{{ title }}</a></h2>
                        <ul>
                        {{#each this.tags}}
                            <li class="button tag"><a href="/tags/{{this.slugTag}}"> {{this}}</a></li>
                        {{/each}}
                        </ul>
                        <time datetime="{{date}}">{{date}}</time>
                    </article>
                    {{/each}}
                </div>
            </div>
        </section>
{{/partial}}

{{> base.hbs}}